{
    "breadcrumbs.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        100
    ],
    "editor.snippetSuggestions": "top",
    "explorer.autoReveal": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.ropeproject": true,
        "**/.mypy_cache": true,
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.enableSmartCommit": true,
    "terminal.integrated.scrollback": 20000,
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            "editor.lineHighlightBackground": "#333333",
        },
    },
    // Language specific editor settings
    "[python]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[shellscript]": {
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[tsv]": {
        "files.insertFinalNewline": false,
        "files.trimTrailingWhitespace": false,
    },
    // Extension settiong
    "bashBeautify.tabSize": 2,
    "bracketPairColorizer.showHorizontalScopeLine": false,
    "csv-preview.capitalizeHeaders": false,
    "csv-preview.lineNumbers": true,
    "csv-preview.theme": "light",
    "gitHistory.showEditorTitleMenuBarIcons": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "python.autoComplete.extraPaths": [
        "~/.pyenv/versions/3.7.0/lib/python3.7/site-packages"
    ],
    "python.formatting.autopep8Args": [
        "--ignore=E501"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=120",
        "--ignore=E402"
    ],
    "python.pythonPath": "~/.pyenv/shims/python",
    "todo-tree.flat": true,
    "todo-tree.grouped": false,
    "todo-tree.highlight": "tag",
    "todo-tree.iconColour": "yellow",
    "todo-tree.defaultHighlight": {
        "foreground": "yellow",
        "type": "tag"
    },
    "todo-tree.customHighlight": {
        "TODO": {},
        "FIXME": {}
    },
    "open-file-from-path.startingPath": "/,tests/",
    "path-intellisense.mappings": {
        "tests": "${workspaceRoot}/tests",
    },
    "rest-client.decodeEscapedUnicodeCharacters": true,
    "rest-client.previewOption": "exchange",
}
