{
    "breadcrumbs.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    // https://qiita.com/yoskeoka/items/3b18ed4a40267aacc76f
    "editor.fontFamily": "SourceHanCodeJP-Regular",
    "editor.fontSize": 11,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        100
    ],
    "editor.snippetSuggestions": "top",
    "explorer.autoReveal": false,
    "extensions.ignoreRecommendations": false,
    "files.associations": {
        "javascript.json": "jsonc"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.ropeproject": true,
        "**/.mypy_cache": true,
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.enableSmartCommit": true,
    // https://github.com/powerline/fonts
    "terminal.integrated.fontFamily": "'Source Code Pro for Powerline'",
    "terminal.integrated.scrollback": 20000,
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            "editor.lineHighlightBackground": "#333333",
        },
    },
    // Language specific editor settings
    "[javascript]": {
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "[shellscript]": {
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[tsv]": {
        "files.insertFinalNewline": false,
        "files.trimTrailingWhitespace": false,
    },
    // Extension settiong
    "bashBeautify.tabSize": 2,
    "bracketPairColorizer.showHorizontalScopeLine": false,
    "csv-preview.capitalizeHeaders": false,
    "csv-preview.lineNumbers": true,
    "csv-preview.theme": "light",
    "gitHistory.showEditorTitleMenuBarIcons": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "liveServer.settings.CustomBrowser": "chrome",
    "liveServer.settings.donotShowInfoMsg": true,
    "python.autoComplete.extraPaths": [
        "~/.pyenv/versions/3.7.0/lib/python3.7/site-packages"
    ],
    "python.formatting.autopep8Args": [
        "--ignore=E501"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=120",
        "--ignore=E402"
    ],
    "python.pythonPath": "~/.pyenv/shims/python",
    "todo-tree.general.tags": [
        "FIXME",
        "NOTE",
        "TODO"
    ],
    "todo-tree.highlights.customHighlight": {
        "FIXME": {
            "icon": "alert"
        },
        "NOTE": {
            "foreground": "cyan",
            "icon": "comment"
        },
        "TODO": {}
    },
    "todo-tree.highlights.defaultHighlight": {
        "foreground": "yellow",
        "type": "tag"
    },
    "open-file-from-path.startingPath": "/,tests/",
    "path-intellisense.mappings": {
        "tests": "${workspaceRoot}/tests",
    },
    "rest-client.decodeEscapedUnicodeCharacters": true,
    "rest-client.previewOption": "exchange",
}
