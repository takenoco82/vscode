// Place your key bindings in this file to overwrite the defaults
[
    /******************************************************
     * 編集
     *****************************************************/
    // 元に戻す
    {
        "key": "cmd+z",
        "command": "undo",
        "when": "textInputFocus && !editorReadonly"
    },
    // やり直し
    {
        "key": "cmd+y",
        "command": "redo",
        "when": "textInputFocus && !editorReadonly"
    },
    // 右側をすべて削除
    {
        "key": "ctrl+k",
        "command": "deleteAllRight",
        "when": "textInputFocus && !editorReadonly"
    },
    // 左側をすべて削除
    {
        "key": "ctrl+u",
        "command": "deleteAllLeft",
        "when": "textInputFocus && !editorReadonly"
    },
    // 左側の単語を削除
    {
        "key": "alt+backspace",
        "command": "deleteWordLeft",
        "when": "textInputFocus && !editorReadonly"
    },
    // 置換
    {
        "key": "cmd+h",
        "command": "editor.action.startFindReplaceAction"
    },
    /******************************************************
     * 選択
     *****************************************************/
    // カーソル位置から行頭までを選択
    {
        "key": "shift+ctrl+a",
        "command": "cursorHomeSelect",
        "when": "textInputFocus"
    },
    // カーソル位置から行末までを選択
    {
        "key": "shift+ctrl+e",
        "command": "cursorEndSelect",
        "when": "textInputFocus"
    },
    /******************************************************
     * 表示
     *****************************************************/
    // コマンドパレット
    {
        "key": "ctrl+[Semicolon]",
        "command": "workbench.action.showCommands"
    },
    // ビュー: SCMの表示
    {
        "key": "shift+cmd+g",
        "command": "workbench.view.scm"
    },
    // ビュー: 統合ターミナルの切り替え
    {
        "key": "ctrl+[Quote]",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    // その他を閉じる
    {
        "key": "ctrl+w o",
        "command": "workbench.action.closeOtherEditors"
    },
    // 他のグループ内のエディターを閉じる
    {
        "key": "ctrl+w shift+o",
        "command": "workbench.action.closeEditorsInOtherGroups"
    },
    // すべて展開
    {
        "key": "alt+0",
        "command": "editor.unfoldAll",
        "when": "editorTextFocus && foldingEnabled"
    },
    // すべて折りたたみ
    {
        "key": "alt+1",
        "command": "editor.foldAll",
        "when": "editorTextFocus && foldingEnabled"
    },
    // アウトラインレベル2で折りたたみ
    {
        "key": "alt+2",
        "command": "editor.foldLevel2",
        "when": "editorTextFocus && foldingEnabled"
    },
    // アウトラインレベル3で折りたたみ
    {
        "key": "alt+3",
        "command": "editor.foldLevel3",
        "when": "editorTextFocus && foldingEnabled"
    },
    // アウトラインレベル4で折りたたみ
    {
        "key": "alt+4",
        "command": "editor.foldLevel4",
        "when": "editorTextFocus && foldingEnabled"
    },
    // 再帰的に折りたたむ
    {
        "key": "alt+[Minus]",
        "command": "editor.foldRecursively",
        "when": "editorTextFocus && foldingEnabled"
    },
    // 再帰的に展開する
    {
        "key": "shift+alt+[Semicolon]",
        "command": "editor.unfoldRecursively",
        "when": "editorTextFocus && foldingEnabled"
    },
    /******************************************************
     * 移動
     *****************************************************/
    // ビュー: エディターを右に分割
    {
        "key": "ctrl+w ctrl+v",
        "command": "workbench.action.splitEditorRight",
        "when": "editorTextFocus"
    },
    // ビュー: エディターを下に分割
    {
        "key": "ctrl+w ctrl+n",
        "command": "workbench.action.splitEditorDown",
        "when": "editorTextFocus"
    },
    // ビュー: 左のエディター グループにフォーカス
    {
        "key": "ctrl+w ctrl+h",
        "command": "workbench.action.focusLeftGroup"
    },
    // ビュー: 下のエディター グループにフォーカス
    {
        "key": "ctrl+w ctrl+j",
        "command": "workbench.action.focusBelowGroup"
    },
    // ビュー: 上のエディター グループにフォーカス
    {
        "key": "ctrl+w ctrl+k",
        "command": "workbench.action.focusAboveGroup"
    },
    // ビュー: 右のエディター グループにフォーカス
    {
        "key": "ctrl+w ctrl+l",
        "command": "workbench.action.focusRightGroup"
    },
    // ビュー: エディターを右のグループに移動
    {
        "key": "ctrl+cmd+right",
        "command": "workbench.action.moveEditorToRightGroup"
    },
    // ビュー: エディターを下のグループに移動
    {
        "key": "ctrl+cmd+down",
        "command": "workbench.action.moveEditorToBelowGroup"
    },
    // ビュー: エディターを左のグループに移動
    {
        "key": "ctrl+cmd+left",
        "command": "workbench.action.moveEditorToLeftGroup"
    },
    // ビュー: エディターを上のグループに移動
    {
        "key": "ctrl+cmd+up",
        "command": "workbench.action.moveEditorToAboveGroup"
    },
    /******************************************************
     * ターミナル
     *****************************************************/
    // タスク: タスクの実行
    {
        "key": "shift+cmd+r",
        "command": "workbench.action.tasks.runTask"
    },
    // タスク: タスクの実行 nosetests
    {
        "key": "cmd+r",
        "command": "workbench.action.tasks.runTask",
        "args": "nosetests",
        "when": "editorLangId == 'python'"
    },
    /******************************************************
     * その他
     *****************************************************/
    // 指定行へ移動 (ctrl+g をプレフィックスにするため)
    {
        "key": "ctrl+g g",
        "command": "workbench.action.gotoLine"
    },
    {
        "key": "ctrl+g",
        "command": "-workbench.action.gotoLine"
    },
    // パスをコピー
    {
        "key": "ctrl+g y",
        "command": "copyFilePath"
    },
    // 相対パスをコピー
    {
        "key": "ctrl+g ctrl+y",
        "command": "copyRelativeFilePath"
    },
    // ファイル: アクティブファイルをサイドバーに表示
    {
        "key": "ctrl+g ctrl+g",
        "command": "workbench.files.action.showActiveFileInExplorer"
    },
    // パスからファイルを開く
    {
        "key": "ctrl+g ctrl+f",
        "command": "extension.openFileFromPath",
        "when": "!terminalFocus"
    },
    // Markdown All in One対応
    {
        "key": "cmd+b",
        "command": "-markdown.extension.editing.toggleBold",
        "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown'"
    }
]
